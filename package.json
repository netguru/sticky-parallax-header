{
  "name": "react-native-sticky-parallax-header",
  "version": "1.1.2",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-sticky-parallax-header.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "repository": "https://github.com/netguru/sticky-parallax-header",
  "author": "IdaszakDaniel <idaszak1@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install && cd ..",
    "bootstrap": "yarn example && yarn && yarn pods",
    "prepush": "yarn lint && yarn typescript",
    "example:android": "yarn example android",
    "example:ios": "yarn example ios",
    "example:web": "yarn example web",
    "example:studio": "studio example/android",
    "example:xcode": "xed example/ios"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-native": ">=0.64.0",
    "react-native-reanimated": ">=2.0.0",
    "react-native-safe-area-context": ">=3.0.0",
    "react-native-linear-gradient": "^2.5.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/eslint-config": "3.0.1",
    "@release-it/conventional-changelog": "^3.3.0",
    "@shopify/flash-list": "^1.2.0",
    "@testing-library/react-native": "9.1.0",
    "@types/jest": "27.4.1",
    "@types/react": "17.0.39",
    "@types/react-native": "0.68.0",
    "@types/react-test-renderer": "17.0.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.2.3",
    "jest": "27.5.1",
    "metro-react-native-babel-preset": "^0.71.2",
    "pod-install": "^0.1.37",
    "prettier": "2.6.2",
    "react": "17.0.2",
    "react-native": "0.68.2",
    "react-native-builder-bob": "0.18.2",
    "react-native-reanimated": "2.8.0",
    "react-native-safe-area-context": "4.2.4",
    "react-test-renderer": "17.0.2",
    "release-it": "14.14.2",
    "typescript": "4.7.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn prepush",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release-it": {
    "hooks": {
      "after:release": "git checkout -b releases/v_${version} && git push -u origin releases/v_${version}"
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "push": false
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "configFile": "./babel.config.js"
        }
      ],
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
